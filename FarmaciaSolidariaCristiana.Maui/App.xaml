<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FarmaciaSolidariaCristiana.Maui"
             xmlns:converters="clr-namespace:FarmaciaSolidariaCristiana.Maui.Converters"
             x:Class="FarmaciaSolidariaCristiana.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:StatusToPendingConverter x:Key="StatusToPendingConverter"/>
            <converters:BoolToPasswordIconConverter x:Key="BoolToPasswordIconConverter"/>
            <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
            
            <!-- Additional Colors -->
            <Color x:Key="BackgroundColor">#F5F5F5</Color>
            <Color x:Key="Primary">#0d6efd</Color>
            <Color x:Key="Secondary">#6c757d</Color>
            <Color x:Key="Success">#198754</Color>
            <Color x:Key="Danger">#dc3545</Color>
            <Color x:Key="Warning">#ffc107</Color>
            <Color x:Key="Info">#0dcaf0</Color>
            <Color x:Key="Light">#f8f9fa</Color>
            <Color x:Key="Dark">#212529</Color>
            <Color x:Key="Gray100">#f8f9fa</Color>
            <Color x:Key="Gray200">#e9ecef</Color>
            <Color x:Key="Gray300">#dee2e6</Color>
            <Color x:Key="Gray400">#ced4da</Color>
            <Color x:Key="Gray500">#adb5bd</Color>
            <Color x:Key="Gray600">#6c757d</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
