<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:FarmaciaSolidariaCristiana.Maui.ViewModels"
             x:Class="FarmaciaSolidariaCristiana.Maui.Views.FechasBloqueadasPage"
             x:DataType="viewmodels:FechasBloqueadasViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource BackgroundColor}">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="{StaticResource Primary}" 
               CornerRadius="0" 
               Padding="20"
               Margin="0">
            <StackLayout>
                <Label Text="ðŸš« Fechas Bloqueadas" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Label Text="Los pacientes no podrÃ¡n agendar turnos en estas fechas" 
                       FontSize="14" 
                       TextColor="#B0D4FF"/>
            </StackLayout>
        </Frame>

        <!-- Add New Date Form -->
        <Frame Grid.Row="1" 
               BackgroundColor="White" 
               CornerRadius="15" 
               Margin="15,15,15,0" 
               Padding="15"
               HasShadow="True">
            <StackLayout Spacing="10">
                <Label Text="Agregar nueva fecha bloqueada" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource Dark}"/>
                
                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <StackLayout Grid.Column="0" Spacing="5">
                        <Label Text="Fecha:" FontSize="14" TextColor="{StaticResource Gray600}"/>
                        <DatePicker Date="{Binding NuevaFecha}"
                                    MinimumDate="{x:Static sys:DateTime.Today}"
                                    BackgroundColor="{StaticResource Gray100}"
                                    xmlns:sys="clr-namespace:System;assembly=netstandard"/>
                    </StackLayout>
                    
                    <StackLayout Grid.Column="1" Spacing="5">
                        <Label Text="Motivo:" FontSize="14" TextColor="{StaticResource Gray600}"/>
                        <Entry Placeholder="Feriado, evento..."
                               Text="{Binding Motivo}"
                               BackgroundColor="{StaticResource Gray100}"/>
                    </StackLayout>
                </Grid>
                
                <Button Text="Agregar Fecha"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="10"
                        Command="{Binding AddFechaBloqueadaCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
            </StackLayout>
        </Frame>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="2"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           Color="{StaticResource Primary}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>

        <!-- Fechas List -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}"
                     IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}">
            <CollectionView ItemsSource="{Binding FechasBloqueadas}"
                            SelectionMode="None"
                            Margin="0,15,0,0">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
                        <Label Text="âœ…" FontSize="48" HorizontalOptions="Center"/>
                        <Label Text="No hay fechas bloqueadas" 
                               FontSize="18" 
                               TextColor="{StaticResource Gray600}"
                               HorizontalOptions="Center"/>
                        <Label Text="Los pacientes pueden agendar cualquier dÃ­a" 
                               FontSize="14" 
                               TextColor="{StaticResource Gray500}"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Eliminar"
                                               BackgroundColor="{StaticResource Danger}"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:FechasBloqueadasViewModel}}, Path=DeleteFechaBloqueadaCommand}"
                                               CommandParameter="{Binding}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame Margin="15,5" Padding="15" BackgroundColor="White" BorderColor="Transparent" CornerRadius="10" HasShadow="True">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                    <!-- Calendar Icon -->
                                    <Frame Grid.Column="0" 
                                           WidthRequest="50" 
                                           HeightRequest="50" 
                                           CornerRadius="10"
                                           BackgroundColor="#FFEBEE"
                                           BorderColor="Transparent"
                                           Padding="0">
                                        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="0">
                                            <Label Text="{Binding Fecha, StringFormat='{0:dd}'}" 
                                                   FontSize="18" 
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource Danger}"
                                                   HorizontalOptions="Center"/>
                                            <Label Text="{Binding Fecha, StringFormat='{0:MMM}'}" 
                                                   FontSize="10" 
                                                   TextColor="{StaticResource Danger}"
                                                   HorizontalOptions="Center"/>
                                        </StackLayout>
                                    </Frame>

                                    <StackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                        <Label Text="{Binding Fecha, StringFormat='{0:dddd, d \\de MMMM \\de yyyy}'}" 
                                               FontSize="14" 
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Dark}"/>
                                        <Label Text="{Binding Motivo}" 
                                               FontSize="13" 
                                               TextColor="{StaticResource Gray600}"/>
                                    </StackLayout>

                                    <!-- Delete Button -->
                                    <Button Grid.Column="2"
                                            Text="ðŸ—‘ï¸"
                                            FontSize="18"
                                            BackgroundColor="Transparent"
                                            VerticalOptions="Center"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:FechasBloqueadasViewModel}}, Path=DeleteFechaBloqueadaCommand}"
                                            CommandParameter="{Binding}"/>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
