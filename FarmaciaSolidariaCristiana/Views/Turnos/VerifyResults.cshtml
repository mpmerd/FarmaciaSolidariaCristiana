@model List<FarmaciaSolidariaCristiana.Models.Turno>
@{
    ViewData["Title"] = "Turnos Encontrados";
    var documento = ViewData["Documento"] as string;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-check-circle-fill"></i> Turnos Encontrados
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <h5><i class="bi bi-info-circle"></i> Resultado de Búsqueda</h5>
                        <p class="mb-0">
                            Se encontraron <strong>@Model.Count turno(s)</strong> activo(s) para el documento: <strong>@documento</strong>
                        </p>
                    </div>

                    @foreach (var turno in Model)
                    {
                        <div class="card mb-4 @(turno.Estado == "Aprobado" ? "border-success" : "border-warning")">
                            <div class="card-header @(turno.Estado == "Aprobado" ? "bg-success" : "bg-warning") text-white">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">
                                        <i class="bi bi-calendar-check"></i> Turno #@turno.Id
                                        @if (turno.NumeroTurno.HasValue)
                                        {
                                            <span class="badge bg-dark">Nº @turno.NumeroTurno.Value.ToString("000")</span>
                                        }
                                    </h5>
                                    <span class="badge @(turno.Estado == "Aprobado" ? "bg-light text-success" : "bg-light text-warning")">
                                        @turno.Estado
                                    </span>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <p><strong>Usuario:</strong> @turno.User?.UserName</p>
                                        <p><strong>Email:</strong> @turno.User?.Email</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Fecha Turno:</strong> @(turno.FechaPreferida?.ToString("dd/MM/yyyy HH:mm") ?? "Por asignar")</p>
                                        <p><strong>Fecha Solicitud:</strong> @turno.FechaSolicitud.ToString("dd/MM/yyyy")</p>
                                    </div>
                                </div>

                                @* Medicamentos *@
                                @if (turno.Medicamentos != null && turno.Medicamentos.Any())
                                {
                                    <div class="mb-3">
                                        <h6 class="text-success">
                                            <i class="bi bi-capsule"></i> Medicamentos (@turno.Medicamentos.Count)
                                        </h6>
                                        <ul class="list-group list-group-flush">
                                            @foreach (var tm in turno.Medicamentos)
                                            {
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    <span>
                                                        <strong>@tm.Medicine?.Name</strong>
                                                        <br/>
                                                        <small class="text-muted">@tm.Medicine?.Description</small>
                                                    </span>
                                                    <span class="badge bg-primary rounded-pill">
                                                        @(tm.CantidadAprobada ?? tm.CantidadSolicitada)
                                                    </span>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                }

                                @* Insumos *@
                                @if (turno.Insumos != null && turno.Insumos.Any())
                                {
                                    <div class="mb-3">
                                        <h6 class="text-info">
                                            <i class="bi bi-box-seam"></i> Insumos (@turno.Insumos.Count)
                                        </h6>
                                        <ul class="list-group list-group-flush">
                                            @foreach (var ti in turno.Insumos)
                                            {
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    <span>
                                                        <strong>@ti.Supply?.Name</strong>
                                                        <br/>
                                                        <small class="text-muted">@ti.Supply?.Description</small>
                                                    </span>
                                                    <span class="badge bg-info rounded-pill">
                                                        @(ti.CantidadAprobada ?? ti.CantidadSolicitada)
                                                    </span>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                }

                                @* Comentarios *@
                                @if (!string.IsNullOrEmpty(turno.ComentariosFarmaceutico))
                                {
                                    <div class="alert alert-info mb-3">
                                        <strong><i class="bi bi-chat-right-text"></i> Comentarios:</strong>
                                        <p class="mb-0">@turno.ComentariosFarmaceutico</p>
                                    </div>
                                }

                                @* Estado y acciones *@
                                @if (turno.Estado == "Aprobado")
                                {
                                    <div class="alert alert-success mb-0">
                                        <h6><i class="bi bi-check-circle"></i> Turno Aprobado - Listo para Entrega</h6>
                                        <p class="mb-2">
                                            Cuando registre la entrega de medicamentos o insumos,
                                            el turno se marcará automáticamente como <strong>completado</strong>.
                                        </p>
                                        <a asp-action="Details" asp-route-id="@turno.Id" class="btn btn-sm btn-primary">
                                            <i class="bi bi-eye"></i> Ver Detalles Completos
                                        </a>
                                    </div>
                                }
                                else if (turno.Estado == "Pendiente")
                                {
                                    <div class="alert alert-warning mb-0">
                                        <h6><i class="bi bi-hourglass-split"></i> Turno Pendiente</h6>
                                        <p class="mb-2">Este turno está pendiente de aprobación por el farmacéutico.</p>
                                        <a asp-action="Details" asp-route-id="@turno.Id" class="btn btn-sm btn-primary">
                                            <i class="bi bi-eye"></i> Ver Detalles Completos
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="Verify" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Nueva Búsqueda
                        </a>
                        <a asp-action="Dashboard" class="btn btn-outline-primary">
                            <i class="bi bi-house"></i> Volver al Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
