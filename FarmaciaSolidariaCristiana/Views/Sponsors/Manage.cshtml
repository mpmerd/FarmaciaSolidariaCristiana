@model IEnumerable<FarmaciaSolidariaCristiana.Models.Sponsor>

@{
    ViewData["Title"] = "Gestionar Patrocinadores";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-award"></i> Gestionar Patrocinadores</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Patrocinador
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Logo</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Orden</th>
                        <th>Estado</th>
                        <th>Fecha Registro</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sponsor in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(sponsor.LogoPath))
                                {
                                    <img src="@sponsor.LogoPath" alt="@sponsor.Name" style="max-height: 50px; max-width: 100px; object-fit: contain;">
                                }
                                else
                                {
                                    <span class="text-muted">Sin logo</span>
                                }
                            </td>
                            <td>@sponsor.Name</td>
                            <td>
                                @if (!string.IsNullOrEmpty(sponsor.Description))
                                {
                                    @(sponsor.Description.Length > 50 ? sponsor.Description.Substring(0, 50) + "..." : sponsor.Description)
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@sponsor.DisplayOrder</td>
                            <td>
                                @if (sponsor.IsActive)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactivo</span>
                                }
                            </td>
                            <td>@sponsor.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@sponsor.Id" class="btn btn-sm btn-primary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@sponsor.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay patrocinadores registrados.
            <a asp-action="Create" class="alert-link">Crear el primero</a>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary" target="_blank">
            <i class="bi bi-eye"></i> Vista Pública
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-house"></i> Volver al Inicio
        </a>
    </div>
</div>
