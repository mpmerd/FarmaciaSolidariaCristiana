@model IEnumerable<FarmaciaSolidariaCristiana.Models.Sponsor>

@{
    ViewData["Title"] = "Nuestros Patrocinadores";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 mb-3">
            <i class="bi bi-award"></i> Nuestros Patrocinadores
        </h1>
        <p class="lead text-muted">
            Agradecemos el apoyo incondicional de quienes hacen posible nuestra misi√≥n solidaria
        </p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var sponsor in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm hover-shadow">
                        @if (!string.IsNullOrEmpty(sponsor.LogoPath))
                        {
                            <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px; padding: 20px;">
                                <img src="@sponsor.LogoPath" alt="@sponsor.Name" class="img-fluid" style="max-height: 160px; max-width: 100%; object-fit: contain;">
                            </div>
                        }
                        else
                        {
                            <div class="card-img-top d-flex align-items-center justify-content-center bg-secondary text-white" style="height: 200px;">
                                <i class="bi bi-building" style="font-size: 4rem;"></i>
                            </div>
                        }
                        <div class="card-body text-center">
                            <h5 class="card-title">@sponsor.Name</h5>
                            @if (!string.IsNullOrEmpty(sponsor.Description))
                            {
                                <p class="card-text text-muted small">@sponsor.Description</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i>
            Actualmente no hay patrocinadores registrados.
        </div>
    }

    <div class="text-center mt-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-house"></i> Volver al Inicio
        </a>
    </div>
</div>

<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
    }
</style>
