@model FarmaciaSolidariaCristiana.Models.Patient

@{
    ViewData["Title"] = "Editar Paciente";
}

<div class="container mt-4">
    <h2>
        <i class="bi bi-pencil-fill"></i> Editar Ficha de Paciente
    </h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editPatientForm">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="RegistrationDate" />
        <input type="hidden" asp-for="IsActive" />

        <!-- 1. DATOS DEL PACIENTE -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">1. Datos del Paciente</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="IdentificationDocument" class="form-label">
                            Carnet de Identidad o Pasaporte <span class="text-danger">*</span>
                        </label>
                        <input asp-for="IdentificationDocument" class="form-control" required readonly />
                        <span asp-validation-for="IdentificationDocument" class="text-danger"></span>
                        <small class="text-muted">El documento de identidad no se puede modificar</small>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FullName" class="form-label">Nombre Completo <span class="text-danger">*</span></label>
                        <input asp-for="FullName" class="form-control" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Age" class="form-label">Edad <span class="text-danger">*</span></label>
                        <input asp-for="Age" class="form-control" type="number" min="0" max="150" required />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Gender" class="form-label">Género <span class="text-danger">*</span></label>
                        <select asp-for="Gender" class="form-select" required>
                            <option value="">Seleccione...</option>
                            <option value="M">Masculino</option>
                            <option value="F">Femenino</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Address" class="form-label">Dirección</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Phone" class="form-label">Teléfono</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Municipality" class="form-label">Municipio</label>
                        <input asp-for="Municipality" class="form-control" />
                        <span asp-validation-for="Municipality" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Province" class="form-label">Provincia</label>
                        <input asp-for="Province" class="form-control" />
                        <span asp-validation-for="Province" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- 2. DATOS CLÍNICOS -->
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">2. Datos Clínicos</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="MainDiagnosis" class="form-label">Diagnóstico Principal</label>
                    <textarea asp-for="MainDiagnosis" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="MainDiagnosis" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="AssociatedPathologies" class="form-label">Patologías Asociadas</label>
                    <textarea asp-for="AssociatedPathologies" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="AssociatedPathologies" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="KnownAllergies" class="form-label">Alergias Conocidas</label>
                    <textarea asp-for="KnownAllergies" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="KnownAllergies" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CurrentTreatments" class="form-label">Tratamientos Actuales</label>
                    <textarea asp-for="CurrentTreatments" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="CurrentTreatments" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- 3. DATOS VITALES -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">3. Datos Vitales</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Presión Arterial (mmHg)</label>
                        <div class="input-group">
                            <input asp-for="BloodPressureSystolic" class="form-control" placeholder="Sistólica" type="number" min="0" max="300" />
                            <span class="input-group-text">/</span>
                            <input asp-for="BloodPressureDiastolic" class="form-control" placeholder="Diastólica" type="number" min="0" max="200" />
                        </div>
                        <small class="form-text text-muted">Ejemplo: 120/80</small>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Weight" class="form-label">Peso (kg)</label>
                        <input asp-for="Weight" class="form-control" type="number" step="0.01" min="0" max="999.99" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Height" class="form-label">Altura (cm)</label>
                        <input asp-for="Height" class="form-control" type="number" step="0.01" min="0" max="999.99" />
                        <span asp-validation-for="Height" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- 4. DOCUMENTOS EXISTENTES -->
        @if (Model.Documents != null && Model.Documents.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">4. Documentos Existentes</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var doc in Model.Documents)
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title">@doc.DocumentType</h6>
                                        <p class="card-text text-muted small">
                                            @doc.FileName<br />
                                            Subido: @doc.UploadDate.ToString("dd/MM/yyyy")
                                        </p>
                                        @if (!string.IsNullOrEmpty(doc.Description))
                                        {
                                            <p class="card-text"><small>@doc.Description</small></p>
                                        }
                                        <div class="btn-group w-100" role="group">
                                            <a href="@doc.FilePath" target="_blank" class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i> Ver
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger delete-doc-btn" 
                                                    data-doc-id="@doc.Id" 
                                                    data-doc-type="@doc.DocumentType" 
                                                    data-doc-name="@doc.FileName"
                                                    data-patient-id="@Model.Id">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- 5. IMPORTAR DOCUMENTOS DE TURNOS -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-cloud-download"></i> 4. Importar Documentos de Solicitudes de Turno</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Si el paciente tiene solicitudes de turno aprobadas, puede importar los documentos que subió.</p>
                <button type="button" id="searchTurnoDocsBtn" class="btn btn-primary mb-3">
                    <i class="bi bi-search"></i> Buscar Documentos en Turnos
                </button>
                
                <!-- Área para mostrar documentos importables de turnos -->
                <div id="turnoDocumentsSection" style="display: none;">
                    <div class="alert alert-info">
                        <h6><i class="bi bi-cloud-download"></i> Documentos encontrados en solicitudes de turno</h6>
                        <p id="turnoDocumentsMessage" class="mb-2"></p>
                        <div id="turnoDocumentsList" class="mb-3"></div>
                        <div class="d-flex gap-2">
                            <button type="button" id="importTurnoDocsBtn" class="btn btn-success btn-sm">
                                <i class="bi bi-download"></i> Importar Seleccionados
                            </button>
                            <button type="button" id="skipTurnoDocsBtn" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-x-circle"></i> No importar
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Documentos importados (ocultos, se enviarán al servidor) -->
                <div id="importedDocumentsContainer"></div>
            </div>
        </div>

        <!-- 5. AGREGAR NUEVOS DOCUMENTOS -->
        <div class="card mb-4">
            <div class="card-header bg-warning">
                <h5 class="mb-0">5. Agregar Nuevos Documentos</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Puede agregar fotos adicionales de documentos médicos.</p>
                <div id="documentFields">
                    <div class="document-row mb-3">
                        <div class="row">
                            <div class="col-md-4">
                                <label class="form-label">Tipo de Documento</label>
                                <select name="documentTypes" class="form-select">
                                    <option value="Receta Médica">Receta Médica</option>
                                    <option value="Tarjetón Sanitario">Tarjetón Sanitario</option>
                                    <option value="Tratamiento">Tratamiento</option>
                                    <option value="Informe Médico">Informe Médico</option>
                                    <option value="Otro">Otro</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Archivo (Foto)</label>
                                <input type="file" name="documents" class="form-control" accept="image/*,.pdf" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Descripción</label>
                                <input type="text" name="documentDescriptions" class="form-control" placeholder="Opcional" />
                            </div>
                        </div>
                    </div>
                </div>
                <button type="button" id="addDocumentBtn" class="btn btn-sm btn-secondary">
                    <i class="bi bi-plus-circle"></i> Agregar Otro Documento
                </button>
            </div>
        </div>

        <!-- 6. OBSERVACIONES -->
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">6. Observaciones</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="Observations" class="form-label">Observaciones Generales</label>
                    <textarea asp-for="Observations" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Observations" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-4">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancelar
            </a>
            <button type="button" class="btn btn-primary" id="submitBtn" onclick="submitForm()">
                <i class="bi bi-save"></i> Guardar Cambios
            </button>
        </div>
    </form>
</div>

<!-- Modal de confirmación para eliminar documentos (fuera del formulario principal) -->
<div class="modal fade" id="deleteDocumentModal" tabindex="-1" aria-labelledby="deleteDocumentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteDocumentModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro que desea eliminar este documento?</p>
                <p><strong id="deleteDocType"></strong>: <span id="deleteDocName"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deleteDocumentForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Variables para importación de documentos de turnos
        let turnoDocuments = [];
        let importedDocumentPaths = [];
        let isSubmitting = false;
        const patientIdentification = '@Model.IdentificationDocument';

        // Función para enviar el formulario
        function submitForm() {
            const form = document.getElementById('editPatientForm');
            const submitBtn = document.getElementById('submitBtn');
            
            if (form && submitBtn) {
                isSubmitting = true;
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Guardando...';
                form.submit();
            }
        }

        // Buscar documentos en turnos
        document.getElementById('searchTurnoDocsBtn').addEventListener('click', function() {
            if (!patientIdentification) {
                alert('El paciente no tiene documento de identidad registrado.');
                return;
            }

            this.disabled = true;
            this.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Buscando...';

            fetch(`/Patients/SearchTurnoDocuments?identification=${encodeURIComponent(patientIdentification)}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.documents && data.documents.length > 0) {
                        turnoDocuments = data.documents;
                        document.getElementById('turnoDocumentsMessage').textContent = data.message;
                        
                        let listHtml = '<div class="list-group">';
                        data.documents.forEach((doc, index) => {
                            listHtml += `
                                <label class="list-group-item d-flex align-items-center">
                                    <input type="checkbox" class="form-check-input me-2 turno-doc-checkbox" 
                                           data-index="${index}" checked />
                                    <div>
                                        <strong>${doc.type}</strong><br/>
                                        <small class="text-muted">${doc.fileName} (Turno: ${doc.fechaSolicitud})</small>
                                    </div>
                                </label>
                            `;
                        });
                        listHtml += '</div>';
                        
                        document.getElementById('turnoDocumentsList').innerHTML = listHtml;
                        document.getElementById('turnoDocumentsSection').style.display = 'block';
                    } else {
                        alert(data.message || 'No se encontraron documentos de turnos para este paciente.');
                    }
                })
                .catch(error => {
                    console.error('Error buscando documentos:', error);
                    alert('Error al buscar documentos de turnos.');
                })
                .finally(() => {
                    this.disabled = false;
                    this.innerHTML = '<i class="bi bi-search"></i> Buscar Documentos en Turnos';
                });
        });

        // Importar documentos seleccionados
        document.getElementById('importTurnoDocsBtn').addEventListener('click', function() {
            const selectedIndexes = [];
            document.querySelectorAll('.turno-doc-checkbox:checked').forEach(cb => {
                selectedIndexes.push(parseInt(cb.dataset.index));
            });

            if (selectedIndexes.length === 0) {
                alert('Por favor selecciona al menos un documento para importar.');
                return;
            }

            const selectedDocs = selectedIndexes.map(i => turnoDocuments[i]);
            const paths = selectedDocs.map(d => d.filePath);
            const types = selectedDocs.map(d => d.type);

            this.disabled = true;
            this.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Importando...';

            fetch('/Patients/ImportTurnoDocuments', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({
                    documentPaths: paths,
                    documentTypes: types
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success && data.copiedFiles && data.copiedFiles.length > 0) {
                    data.copiedFiles.forEach(file => {
                        importedDocumentPaths.push(file.newPath);
                    });
                    
                    const container = document.getElementById('importedDocumentsContainer');
                    container.innerHTML = '';
                    
                    let importedHtml = '<div class="alert alert-success mb-3"><h6><i class="bi bi-check-circle"></i> Documentos importados:</h6><ul class="mb-0">';
                    
                    data.copiedFiles.forEach(file => {
                        container.innerHTML += `
                            <input type="hidden" name="importedDocumentPaths" value="${file.newPath}" />
                            <input type="hidden" name="importedDocumentTypes" value="${file.documentType}" />
                            <input type="hidden" name="importedDocumentNames" value="${file.fileName}" />
                        `;
                        importedHtml += `<li>${file.documentType}: ${file.fileName}</li>`;
                    });
                    importedHtml += '</ul><small class="text-muted">Se guardarán al hacer clic en "Guardar Cambios"</small></div>';
                    
                    document.getElementById('turnoDocumentsSection').innerHTML = importedHtml;
                    
                    alert(`${data.copiedFiles.length} documento(s) importado(s) correctamente. Se agregarán al guardar.`);
                } else {
                    alert('No se pudieron importar los documentos. ' + (data.message || ''));
                }
            })
            .catch(error => {
                console.error('Error importando documentos:', error);
                alert('Error al importar documentos.');
            })
            .finally(() => {
                this.disabled = false;
                this.innerHTML = '<i class="bi bi-download"></i> Importar Seleccionados';
            });
        });

        // No importar documentos
        document.getElementById('skipTurnoDocsBtn')?.addEventListener('click', function() {
            document.getElementById('turnoDocumentsSection').style.display = 'none';
            turnoDocuments = [];
        });

        // Limpiar documentos importados si se cancela (pero NO al enviar el form)
        window.addEventListener('beforeunload', function(e) {
            if (importedDocumentPaths.length > 0 && !isSubmitting) {
                const data = JSON.stringify({ filePaths: importedDocumentPaths });
                navigator.sendBeacon('/Patients/CleanupImportedDocuments', new Blob([data], {type: 'application/json'}));
            }
        });

        // Agregar documentos dinámicamente
        const addDocumentBtn = document.getElementById('addDocumentBtn');
        if (addDocumentBtn) {
            addDocumentBtn.addEventListener('click', function() {
                const documentFields = document.getElementById('documentFields');
                const newRow = document.createElement('div');
                newRow.className = 'document-row mb-3';
                newRow.innerHTML = `
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">Tipo de Documento</label>
                            <select name="documentTypes" class="form-select">
                                <option value="Receta Médica">Receta Médica</option>
                                <option value="Tarjetón Sanitario">Tarjetón Sanitario</option>
                                <option value="Tratamiento">Tratamiento</option>
                                <option value="Informe Médico">Informe Médico</option>
                                <option value="Otro">Otro</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Archivo (Foto)</label>
                            <input type="file" name="documents" class="form-control" accept="image/*,.pdf" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Descripción</label>
                            <div class="input-group">
                                <input type="text" name="documentDescriptions" class="form-control" placeholder="Opcional" />
                                <button type="button" class="btn btn-danger remove-document-btn">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                `;
                documentFields.appendChild(newRow);

                newRow.querySelector('.remove-document-btn').addEventListener('click', function() {
                    newRow.remove();
                });
            });
        }

        // Manejar botones de eliminar documento
        document.querySelectorAll('.delete-doc-btn').forEach(function(btn) {
            btn.addEventListener('click', function() {
                const docId = this.dataset.docId;
                const docType = this.dataset.docType;
                const docName = this.dataset.docName;
                const patientId = this.dataset.patientId;

                // Actualizar el modal con la información del documento
                document.getElementById('deleteDocType').textContent = docType;
                document.getElementById('deleteDocName').textContent = docName;
                
                // Actualizar la acción del formulario
                const form = document.getElementById('deleteDocumentForm');
                form.action = `/Patients/DeleteDocument?id=${docId}&patientId=${patientId}`;

                // Mostrar el modal
                const modal = new bootstrap.Modal(document.getElementById('deleteDocumentModal'));
                modal.show();
            });
        });
    </script>
}
