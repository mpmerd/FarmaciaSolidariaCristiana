@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Gestión de Usuarios";
    var users = UserManager.Users.ToList();
    var currentUserId = UserManager.GetUserId(User);
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@ViewData["Title"]</h4>
            <a asp-action="CreateUser" class="btn btn-light">
                <i class="bi bi-plus-circle"></i> Crear Nuevo Usuario
            </a>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <div class="alert alert-info mb-4">
                <h5><i class="bi bi-info-circle"></i> Roles Disponibles:</h5>
                <ul class="mb-0">
                    <li><strong>Admin:</strong> Acceso completo al sistema, puede gestionar usuarios</li>
                    <li><strong>Farmaceutico:</strong> Puede gestionar medicamentos, entregas, donaciones y búsquedas de CN</li>
                    <li><strong>Viewer:</strong> Solo puede ver información y generar reportes</li>
                </ul>
            </div>

            <h5 class="mb-3"><i class="bi bi-people-fill"></i> Usuarios del Sistema</h5>
            
            @if (users.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Usuario</th>
                                <th>Email</th>
                                <th>Rol</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in users)
                            {
                                var userRoles = await UserManager.GetRolesAsync(user);
                                var role = userRoles.FirstOrDefault() ?? "Sin rol";
                                var isCurrentUser = user.Id == currentUserId;
                                
                                <tr>
                                    <td>
                                        <i class="bi bi-person-circle"></i> @user.UserName
                                        @if (isCurrentUser)
                                        {
                                            <span class="badge bg-primary ms-2">Tú</span>
                                        }
                                    </td>
                                    <td>@user.Email</td>
                                    <td>
                                        @if (role == "Admin")
                                        {
                                            <span class="badge bg-danger">@role</span>
                                        }
                                        else if (role == "Farmaceutico")
                                        {
                                            <span class="badge bg-success">@role</span>
                                        }
                                        else if (role == "Viewer")
                                        {
                                            <span class="badge bg-info">@role</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@role</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="EditUser" asp-route-id="@user.Id" 
                                               class="btn btn-sm btn-warning" 
                                               title="Editar usuario">
                                                <i class="bi bi-pencil-fill"></i> Editar
                                            </a>
                                            
                                            @if (!isCurrentUser)
                                            {
                                                <button type="button" 
                                                        class="btn btn-sm btn-danger" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#deleteModal-@user.Id"
                                                        title="Eliminar usuario">
                                                    <i class="bi bi-trash-fill"></i> Eliminar
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>

                                <!-- Modal de Confirmación de Eliminación -->
                                <div class="modal fade" id="deleteModal-@user.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title" id="deleteModalLabel">
                                                    <i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>¿Estás seguro de que deseas eliminar al usuario <strong>@user.UserName</strong>?</p>
                                                <p class="text-danger"><i class="bi bi-exclamation-circle"></i> Esta acción no se puede deshacer.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                    <i class="bi bi-x-circle"></i> Cancelar
                                                </button>
                                                <form asp-action="DeleteUser" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash-fill"></i> Eliminar
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
                
                <div class="mt-3">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i> Total de usuarios: <strong>@users.Count</strong>
                    </small>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> No hay usuarios en el sistema.
                </div>
            }
        </div>
    </div>
</div>
