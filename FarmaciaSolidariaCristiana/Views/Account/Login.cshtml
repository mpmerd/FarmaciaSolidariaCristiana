@model FarmaciaSolidariaCristiana.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-5">
            <div class="card-header bg-primary text-white text-center">
                <div class="d-flex justify-content-center align-items-center gap-3 mb-2">
                    <img src="~/images/logo-iglesia.png" alt="Logo Iglesia" style="height: 60px; object-fit: contain;">
                    <img src="~/images/logo-adriano.png" alt="Logo Adriano" style="height: 60px; object-fit: contain;">
                </div>
                <h4 class="mb-0">@ViewData["Title"]</h4>
                <small>Iglesia Metodista de Cárdenas y Adriano Solidario</small>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
