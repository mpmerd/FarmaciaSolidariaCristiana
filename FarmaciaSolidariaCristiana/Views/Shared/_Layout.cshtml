<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Farmacia Solidaria Cristiana</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmaciaSolidariaCristiana.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid px-2 position-relative">
                <a class="navbar-brand d-flex flex-column align-items-start me-2" asp-controller="Home" asp-action="Index" style="line-height: 1.2;">
                    <div>
                        <i class="bi bi-heart-pulse-fill"></i> Farmacia Solidaria
                    </div>
                    <!-- Decoración del Navbar (se carga dinámicamente) -->
                    <div id="navbar-decoration" class="d-none d-lg-flex align-items-center" style="font-size: 0.85rem; margin-top: 2px;">
                        <!-- El contenido se inyecta vía JavaScript -->
                    </div>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav gap-1">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white text-center" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house d-block"></i>
                                    <small>Inicio</small>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white text-center" asp-controller="Patients" asp-action="Index">
                                    <i class="bi bi-person-lines-fill d-block"></i>
                                    <small>Pacientes</small>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white text-center" asp-controller="Medicines" asp-action="Index">
                                    <i class="bi bi-capsule d-block"></i>
                                    <small>Medicinas</small>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white text-center" asp-controller="Supplies" asp-action="Index">
                                    <i class="bi bi-box-seam d-block"></i>
                                    <small>Insumos</small>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white text-center" asp-controller="Deliveries" asp-action="Index">
                                    <i class="bi bi-box-arrow-right d-block"></i>
                                    <small>Entregas</small>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white text-center" asp-controller="Donations" asp-action="Index">
                                    <i class="bi bi-gift d-block"></i>
                                    <small>Donaciones</small>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white text-center" asp-controller="Reports" asp-action="Index">
                                    <i class="bi bi-file-pdf d-block"></i>
                                    <small>Reportes</small>
                                </a>
                            </li>
                            @if (User.IsInRole("ViewerPublic"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white text-center" asp-controller="Turnos" asp-action="Index">
                                        <i class="bi bi-calendar-check d-block"></i>
                                        <small>Turnos</small>
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Farmaceutico") || User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white text-center" asp-controller="Turnos" asp-action="Dashboard">
                                        <i class="bi bi-kanban d-block"></i>
                                        <small>Gestión</small>
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white text-center" href="#" id="navbarDropdownTurnos" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-calendar-event d-block"></i>
                                        <small>Avanzado</small>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownTurnos">
                                        <li>
                                            <a class="dropdown-item" asp-controller="FechasBloqueadas" asp-action="Index">
                                                <i class="bi bi-calendar-x"></i> Fechas Bloqueadas
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Turnos" asp-action="ReprogramarFecha">
                                                <i class="bi bi-calendar-range"></i> Reprogramar Turnos
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="NavbarDecorations" asp-action="Index">
                                                <i class="fa-solid fa-palette"></i> Decoraciones del Navbar
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white text-center" asp-controller="Sponsors" asp-action="Manage">
                                        <i class="bi bi-award d-block"></i>
                                        <small>Patrocinios</small>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white text-center" asp-controller="Account" asp-action="ManageUsers">
                                        <i class="bi bi-people d-block"></i>
                                        <small>Usuarios</small>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto flex-nowrap">
                        <!-- Botón Quiénes somos (siempre visible) -->
                        <li class="nav-item d-flex align-items-center me-2">
                            <a class="btn btn-outline-light btn-sm text-nowrap" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle"></i> Quiénes somos
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item d-flex align-items-center me-2">
                                <span class="navbar-text text-white">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-outline-light btn-sm text-nowrap">
                                        <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5 mb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-4" style="margin-top: 4rem;">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-2 mb-md-0">
                    <p class="mb-1">
                        <strong>&copy; 2025 Farmacia Solidaria Cristiana</strong>
                    </p>
                    <p class="mb-0 small">Iglesia Metodista de Cárdenas</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-1">
                        <i class="bi bi-code-slash"></i> Desarrollado por <strong>Rev. Maikel Eduardo Peláez Martínez</strong>
                    </p>
                    <p class="mb-0 small">
                        <i class="bi bi-github"></i> 
                        <a href="https://github.com/mpmerd" target="_blank" class="text-muted text-decoration-none">github.com/mpmerd</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    
    <!-- Font Awesome para iconos de festividades -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Script para decoración dinámica del navbar -->
    <script>
        (function() {
            let currentDecorationId = null;
            
            function loadNavbarDecoration() {
                fetch('/api/navbar-decoration/active')
                    .then(response => response.json())
                    .then(data => {
                        const decorationContainer = document.getElementById('navbar-decoration');
                        
                        if (!data.active) {
                            decorationContainer.innerHTML = '';
                            decorationContainer.classList.add('d-none');
                            currentDecorationId = null;
                            return;
                        }
                        
                        // Solo actualizar si cambió la decoración
                        const newId = data.name + (data.displayText || '');
                        if (currentDecorationId === newId) {
                            return;
                        }
                        
                        currentDecorationId = newId;
                        
                        let html = '';
                        
                        // Agregar icono
                        if (data.type === 'Custom' && data.customIconPath) {
                            html += `<img src="${data.customIconPath}" alt="Icono" style="width: 28px; height: 28px; object-fit: contain; margin-right: 10px;">`;
                        } else if (data.iconClass) {
                            html += `<i class="${data.iconClass} fa-lg" style="color: ${data.iconColor}; margin-right: 10px;"></i>`;
                        }
                        
                        // Agregar texto
                        if (data.displayText) {
                            html += `<span style="color: ${data.textColor}; font-weight: 500; font-size: 1.1rem; text-shadow: 1px 1px 2px rgba(0,0,0,0.3);">${data.displayText}</span>`;
                        }
                        
                        decorationContainer.innerHTML = html;
                        decorationContainer.classList.remove('d-none');
                        
                        // Agregar animación suave
                        decorationContainer.style.animation = 'fadeIn 0.5s ease-in';
                    })
                    .catch(error => {
                        console.error('Error loading navbar decoration:', error);
                    });
            }
            
            // Cargar decoración al inicio
            loadNavbarDecoration();
            
            // Recargar cada 30 segundos para detectar cambios sin refrescar la página
            setInterval(loadNavbarDecoration, 30000);
            
            // CSS para animación
            const style = document.createElement('style');
            style.textContent = `
                @@keyframes fadeIn {
                    from { opacity: 0; transform: translateX(-50%) translateY(-10px); }
                    to { opacity: 1; transform: translateX(-50%) translateY(0); }
                }
                #navbar-decoration {
                    transition: all 0.3s ease;
                }
            `;
            document.head.appendChild(style);
        })();
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
