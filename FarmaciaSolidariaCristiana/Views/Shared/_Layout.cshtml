<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Farmacia Solidaria Cristiana</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmaciaSolidariaCristiana.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-pulse-fill"></i> Farmacia Solidaria Cristiana
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house"></i> Inicio
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Patients" asp-action="Index">
                                    <i class="bi bi-person-lines-fill"></i> Pacientes
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Medicines" asp-action="Index">
                                    <i class="bi bi-capsule"></i> Medicamentos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Supplies" asp-action="Index">
                                    <i class="bi bi-box-seam"></i> Insumos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Deliveries" asp-action="Index">
                                    <i class="bi bi-box-arrow-right"></i> Entregas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Donations" asp-action="Index">
                                    <i class="bi bi-gift"></i> Donaciones
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Reports" asp-action="Index">
                                    <i class="bi bi-file-pdf"></i> Reportes
                                </a>
                            </li>
                            @if (User.IsInRole("ViewerPublic"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Turnos" asp-action="Index">
                                        <i class="bi bi-calendar-check"></i> Turnos
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Farmaceutico") || User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Turnos" asp-action="Dashboard">
                                        <i class="bi bi-kanban"></i> Gestión Turnos
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Sponsors" asp-action="Manage">
                                        <i class="bi bi-award"></i> Patrocinadores
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Account" asp-action="ManageUsers">
                                        <i class="bi bi-people"></i> Usuarios
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-white me-3">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm">
                                        <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5 mb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-4" style="margin-top: 4rem;">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-2 mb-md-0">
                    <p class="mb-1">
                        <strong>&copy; 2024-2025 Farmacia Solidaria Cristiana</strong>
                    </p>
                    <p class="mb-0 small">Iglesia Metodista de Cárdenas</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-1">
                        <i class="bi bi-code-slash"></i> Desarrollado por <strong>Rev. Maikel Eduardo Peláez Martínez</strong>
                    </p>
                    <p class="mb-0 small">
                        <i class="bi bi-envelope"></i> 
                        <a href="mailto:mpmerd@gmail.com" class="text-muted text-decoration-none">mpmerd@gmail.com</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
